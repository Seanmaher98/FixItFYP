<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".TradesPricesActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prices"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/product_prices"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_below="@id/btnClose"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_prices"
        android:text="Note: Setting these prices allow a customer to see what prices are charged for certain jobs. Prices for more specific jobs can be arranged personally with the customer"
        android:id="@+id/messageView"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/callout"
            android:layout_below="@id/messageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Call Out"
            android:textColor="@color/white"
            android:textSize="15sp">
        </TextView>
        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/messageView"
            android:layout_toRightOf="@id/btnSave"
            android:id="@+id/set_callout_price"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:background="@drawable/edit_text"
            android:backgroundTint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Consultation"
            android:layout_below="@id/callout"
            android:id="@+id/phone_consultation"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_margin="10dp">
        </TextView>
        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/callout"
            android:layout_toRightOf="@id/btnSave"
            android:id="@+id/set_consultation_price"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:background="@drawable/edit_text"
            android:backgroundTint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_consultation"
            android:text="Weekend Call-Out"
            android:id="@+id/weekend_call"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_margin="10dp">
        </TextView>
        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_consultation"
            android:layout_toRightOf="@id/btnSave"
            android:id="@+id/set_weekendCall"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:background="@drawable/edit_text"
            android:backgroundTint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weekend_call"
            android:text="Same Day Job (Urgent)"
            android:id="@+id/sameday_job"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_margin="10dp">
        </TextView>
        <EditText
            android:layout_width="75dp"
            android:layout_below="@id/weekend_call"
            android:layout_toRightOf="@id/btnSave"
            android:layout_height="wrap_content"
            android:id="@+id/set_sameday_price"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:background="@drawable/edit_text"
            android:backgroundTint="@color/white"/>




    <Button
        android:id="@+id/btnSave"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_buttons"
        android:layout_below="@id/sameday_job"
        android:enabled="true"
        android:layout_centerHorizontal="true"
        android:text="Save"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_close"
        android:enabled="true"
        android:backgroundTint="@color/white"
        android:layout_centerHorizontal="true" />


</RelativeLayout>