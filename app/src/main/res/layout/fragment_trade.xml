<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TradeFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="405dp"
        android:layout_height="115dp"
        android:paddingTop="16dp"
        android:src="@drawable/project_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/trade_const_layout"
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="120dp">

        <ScrollView
            android:id="@+id/trade_scroll"
            android:layout_width="331dp"
            android:layout_height="520dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/trade_const_layout">

        <LinearLayout
            android:id="@+id/trade_layout"
            android:layout_width="322dp"
            android:layout_height="402dp"
            android:paddingBottom="16dp"
            android:paddingLeft="50dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/trade_const_layout">

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="150dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="  First Name"
                android:inputType="textPersonName"
                android:textAlignment="gravity"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.005" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="200dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="   Last Name"
                android:inputType="textPersonName"
                android:textAlignment="gravity"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toEndOf="@+id/editFirstName"
                app:layout_constraintTop_toBottomOf="parent" />



            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="248dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="    E-mail"
                android:inputType="textEmailAddress"
                android:textAlignment="gravity"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editLastName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editAddressLine1"
                android:layout_width="248dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="   Address Line 1"
                android:inputType="textPostalAddress"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editEmail" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editAddressLine2"
                android:layout_width="248dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="   Address Line 2"
                android:inputType="textPostalAddress"
                android:textAlignment="gravity"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editAddressLine1" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editAddressLineTown"
                android:layout_width="200dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="   Town"
                android:inputType="textPostalAddress"
                android:textAlignment="gravity"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editAddressLine2" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <Spinner
                android:id="@+id/spinnerCounty"
                android:layout_width="200dp"
                android:layout_height="47dp"
                android:textAlignment="gravity"
                android:background="@drawable/edit_text"
                android:textCursorDrawable="@color/teal_200"
                android:entries="@array/County"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editAddressLineTown" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Spinner
                android:id="@+id/spinnerJobs"
                android:layout_width="200dp"
                android:layout_height="47dp"
                android:textAlignment="gravity"
                android:background="@drawable/edit_text"
                android:entries="@array/Jobs"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerCounty" />

            <Button
                android:id="@+id/buttonAddTrade"
                android:layout_width="247dp"
                android:layout_height="48dp"
                android:text="Register"
                android:enabled="false"
                android:textColor="@color/white"
                android:background="@drawable/custom_buttons"
                app:layout_constraintBottom_toBottomOf="@id/trade_const_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trade_scroll"/>

        </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>
