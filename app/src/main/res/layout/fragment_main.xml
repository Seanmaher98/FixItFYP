<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TradeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/trade_const_layout"
        android:layout_width="360dp"
        android:layout_height="450dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp">

        <ScrollView
            android:id="@+id/trade_scroll"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/trade_layout"
            android:layout_width="322dp"
            android:layout_height="402dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/trade_scroll">

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="248dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="   Enter First Name"
                android:inputType="textPersonName"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.005" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="248dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="   Enter Last Name"
                android:inputType="textPersonName"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editFirstName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="248dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:textCursorDrawable="@color/teal_200"
                android:hint="   Enter e-mail Address"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editLastName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editAddressLine1"
                android:layout_width="248dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:textCursorDrawable="@color/teal_200"
                android:hint="   Enter Address"
                android:inputType="textPostalAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editEmail" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editAddressLine2"
                android:layout_width="248dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="   Enter Address"
                android:inputType="textPostalAddress"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editAddressLine1" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editAddressLineTown"
                android:layout_width="248dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="   Town"
                android:inputType="textPostalAddress"
                app:layout_constraintEnd_toEndOf="parent"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editAddressLine2" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <Spinner
                android:id="@+id/spinnerCounty"
                android:layout_width="248dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:textCursorDrawable="@color/teal_200"
                android:entries="@array/County"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editAddressLineTown" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <Spinner
                android:id="@+id/spinnerJobs"
                android:layout_width="248dp"
                android:layout_height="47dp"
                android:background="@drawable/edit_text"
                android:entries="@array/Jobs"
                android:textCursorDrawable="@color/teal_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerCounty" />



        </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/buttonAddTrade"
            android:layout_width="247dp"
            android:layout_height="48dp"
            android:text="Register"
            android:textColor="@color/white"
            app:background="@drawable/button_design"
            app:layout_constraintBottom_toBottomOf="@id/trade_const_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trade_scroll"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
