<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UserReviewActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/project_logo"
        android:background="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:id="@+id/txtReviewName"
        android:textFontWeight="@android:integer/config_mediumAnimTime"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editTextLeaveReview"
        android:ems="10"
        android:layout_gravity="center"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/review_style"
        android:hint="Please type your review here..."
        android:textSize="16sp"/>

    <Button
        android:layout_marginTop="12dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_enabled"
        android:text="Save"
        android:id="@+id/btnSaveReview"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center">
    </Button>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_buttons"
        android:enabled="true"
        android:text="Close"
        android:textColor="@color/white" />

</LinearLayout>