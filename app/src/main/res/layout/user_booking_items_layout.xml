<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeLayout1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trade_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:padding="10dp"
            android:text="Trade Name"

            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trade_date"
            android:text="Date"
            android:layout_below="@id/trade_name"
            android:textSize="14sp"
            android:padding="10dp"
            android:gravity="left"
            android:textColor="@color/cardview_dark_background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookingId"
            android:visibility="invisible"
            android:textAlignment="center"
            android:layout_below="@id/trade_date"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/cardview_dark_background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tradeId"
            android:visibility="invisible"
            android:textAlignment="center"
            android:layout_below="@id/bookingId"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/cardview_dark_background"/>


    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btnDeleteBooking"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_below="@id/trade_name"
        android:text="View"
        android:textColor="@color/white"
        android:background="@drawable/button_date"
        android:layout_centerHorizontal="true"/>

</androidx.cardview.widget.CardView>