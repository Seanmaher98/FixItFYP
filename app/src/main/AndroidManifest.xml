<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fixitfyp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/project_thumb"
        android:label="@string/app_name"
        android:roundIcon="@drawable/project_thumb"
        android:supportsRtl="true"
        android:theme="@style/Theme.FixItFYP">
        <activity android:name=".UserMessages"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".TradeMessages"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".MyAccount"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ProductsReviewActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".TradeReviewActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".TradeUserReviewActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".UserReviewActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".CancelBookingActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".UserBookings"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".TradeUpcomingJobs"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ProductsPriceActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".TradesPricesActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ProductDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".UserNavigationActivity"
            android:label="@string/title_activity_user_navigation"
            android:theme="@style/Theme.FixItFYP.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Dashboard"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".HomeActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>